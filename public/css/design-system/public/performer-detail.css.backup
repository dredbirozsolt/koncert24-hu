/**
 * Performer Detail Page Styles
 * Dedicated styles for performer profile pages
 */

/* ==========================================
   PERFORMER DETAIL LAYOUT
   ========================================== */

.performer-detail {
  min-height: 60vh;
}

/* ==========================================
   PERFORMER CARD HERO
   ========================================== */

.performer-card-hero {
  background: linear-gradient(135deg, var(--color-white) 0%, var(--color-gray-50) 100%);
  border-bottom: 1px solid var(--border-base);
  padding: var(--space-6) 0;
}

.performer-card-expanded {
  background: var(--bg-surface);
  border-radius: var(--radius-2xl);
  padding: var(--space-6);
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--border-base);
  text-align: center;
}

.performer-image-large {
  margin: 0 auto var(--space-6);
  text-align: center;
  display: flex;
  justify-content: center;
}

.performer-photo-large {
  width: 100%;
  aspect-ratio: 1;
  object-fit: cover;
  border-radius: var(--radius-2xl);
  box-shadow: var(--shadow-xl);
  border: 3px solid var(--color-primary-600);
}

.performer-name-large {
  font-size: var(--text-2xl);
  font-weight: var(--font-weight-extrabold);
  color: var(--text-primary);
  margin-bottom: var(--space-6);
  line-height: var(--leading-tight);
}

/* ==========================================
   PERFORMER DATA BLOCK
   ========================================== */

.performer-data-block {
  background: var(--bg-subtle);
  border-radius: var(--radius-xl);
  padding: var(--space-6);
  margin-bottom: var(--space-6);
  text-align: left;
}

.data-block-title {
  font-size: var(--text-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-4);
  text-align: center;
}

.data-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  margin-bottom: var(--space-3);
  padding-bottom: var(--space-3);
  border-bottom: 1px solid var(--border-base);
}

.data-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
  padding-bottom: 0;
}

.data-label {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  font-weight: var(--font-weight-semibold);
}

.data-value {
  font-size: var(--text-lg);
  color: var(--text-primary);
  font-weight: var(--font-weight-bold);
}

.category-value {
  color: var(--color-primary-600);
}

.price-value {
  color: var(--color-primary-600);
  font-size: var(--text-xl);
}

.price-login-notice {
  background: var(--bg-subtle);
  border: 1px solid var(--border-base);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  margin: var(--space-2) 0;
}

.price-login-notice .data-value {
  color: var(--text-secondary);
  font-size: var(--text-base);
}

.login-link,
.register-link,
.verify-link {
  color: var(--color-primary-600);
  text-decoration: none;
  font-weight: var(--font-weight-semibold);
  transition: var(--transition-colors);
}

.login-link:hover,
.register-link:hover,
.verify-link:hover {
  text-decoration: underline;
  color: var(--color-primary-700);
}

/* ==========================================
   PERFORMER ACTIONS
   ========================================== */

.performer-actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.performer-actions .btn {
  width: 100%;
  justify-content: center;
}

/* ==========================================
   BOOKING CTA SECTION
   ========================================== */

.booking-section {
  padding: var(--space-8) 0;
}

.booking-cta {
  background: var(--bg-surface);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--border-base);
  margin-bottom: var(--space-6);
}

.cta-buttons {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  justify-content: center;
}

/* ==========================================
   DESCRIPTION SECTION
   ========================================== */

.performer-description-section {
  padding: var(--space-8) 0;
}

.description-card {
  background: var(--bg-surface);
  border-radius: var(--radius-xl);
  padding: var(--space-6);
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-base);
}

.description-title {
  font-size: var(--text-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-4);
}

.description-content {
  color: var(--text-secondary);
  line-height: var(--leading-relaxed);
}

/* ==========================================
   SIMILAR PERFORMERS SECTION
   ========================================== */

.similar-performers {
  padding: var(--space-12) 0;
  background: var(--bg-subtle);
}

.similar-performers-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-weight-extrabold);
  color: var(--text-primary);
  text-align: center;
  margin-bottom: var(--space-8);
}

.performers-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-4);
}

/* ==========================================
   PERFORMER CARD (Similar Performers)
   ========================================== */

.performer-card {
  background: var(--bg-surface);
  border-radius: var(--radius-xl);
  border: 1px solid var(--border-base);
  overflow: hidden;
  transition: var(--transition-base);
  box-shadow: var(--shadow-sm);
  height: 100%;
  display: flex;
  flex-direction: column;
}

.performer-card:hover {
  transform: translateY(-6px);
  box-shadow: var(--shadow-xl);
  border-color: var(--color-primary-300);
}

.performer-image {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
}

.performer-image a {
  display: block;
  width: 100%;
  height: 100%;
  color: inherit;
  text-decoration: none;
}

.performer-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: var(--transition-base);
}

.performer-card:hover .performer-image img {
  transform: scale(1.05);
}

.performer-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-subtle);
  color: var(--text-tertiary);
}

.performer-placeholder svg {
  width: 64px;
  height: 64px;
}

.performer-content {
  padding: var(--space-6);
  flex: 1;
  display: flex;
  flex-direction: column;
}

.performer-header {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: var(--space-3);
  gap: var(--space-2);
}

.performer-category {
  font-size: var(--text-xs);
  font-weight: var(--font-weight-semibold);
  text-transform: uppercase;
  letter-spacing: var(--tracking-wide);
  color: var(--color-primary-600);
  background: var(--color-primary-50);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-base);
}

.performer-price-badge {
  font-size: var(--text-xs);
  font-weight: var(--font-weight-semibold);
  color: var(--color-success-600);
  background: var(--color-success-50);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-base);
  white-space: nowrap;
}

.performer-name {
  margin-bottom: var(--space-3);
}

.performer-name a {
  font-size: var(--text-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  text-decoration: none;
  transition: var(--transition-colors);
}

.performer-name a:hover {
  color: var(--color-primary-600);
}

.performer-description {
  color: var(--text-secondary);
  margin-bottom: var(--space-6);
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.btn-icon {
  width: 16px;
  height: 16px;
  margin-right: var(--space-1);
}

/* ==========================================
   DESKTOP RESPONSIVE (768px+)
   ========================================== */

@media (min-width: 768px) {
  .performer-card-expanded {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    text-align: left;
    padding: var(--space-8);
  }

  .performer-image-large {
    grid-column: 1;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .performer-photo-large {
    width: 100%;
    aspect-ratio: 1;
    flex-shrink: 0;
  }

  .performer-info {
    grid-column: 2 / 4;
    flex: 1;
  }

  .performer-name-large {
    font-size: var(--text-4xl);
    text-align: left;
  }

  .data-item {
    flex-direction: row;
    align-items: center;
    gap: var(--space-3);
  }

  .data-label {
    min-width: 150px;
    flex-shrink: 0;
  }

  .performer-actions {
    flex-direction: row;
    gap: var(--space-4);
  }

  .performer-actions .btn {
    width: auto;
    flex: 1;
  }

  .cta-buttons {
    flex-direction: row;
    gap: var(--space-4);
  }

  .performers-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }

  .performer-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
  }
}

/* ==========================================
   TABLET RESPONSIVE (481px - 768px)
   ========================================== */

@media (min-width: 481px) and (max-width: 768px) {
  .performers-grid {
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  }
}

/* ==========================================
   DARK MODE
   ========================================== */

@media (prefers-color-scheme: dark) {
  .performer-card-hero {
    background: linear-gradient(135deg, var(--color-gray-900) 0%, var(--color-gray-950) 100%);
  }

  .performer-category {
    background: var(--color-primary-900);
    color: var(--color-primary-300);
  }

  .performer-price-badge {
    background: var(--color-success-900);
    color: var(--color-success-300);
  }
}

[data-theme="dark"] {
  .performer-card-hero {
    background: linear-gradient(135deg, var(--color-gray-900) 0%, var(--color-gray-950) 100%);
  }

  .performer-category {
    background: var(--color-primary-900);
    color: var(--color-primary-300);
  }

  .performer-price-badge {
    background: var(--color-success-900);
    color: var(--color-success-300);
  }
}
