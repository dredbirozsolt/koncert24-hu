/* ================================
   Blog Post Detail Page Styles
   Design system komponensek használatával
   ================================ */

/* ==========================================
   POST HEADER
   ========================================== */

.post-header {
  max-width: 900px;
  margin: 0 auto var(--space-12);
  padding: 0 var(--space-4);
}

.post-header__category {
  display: inline-block;
  background: var(--primary-600);
  color: white;
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-full);
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  text-decoration: none;
  margin-bottom: var(--space-4);
  transition: all var(--transition-base);
}

.post-header__category:hover {
  background: var(--primary-700);
  transform: translateY(-2px);
}

.post-header__title {
  font-size: var(--text-4xl);
  line-height: 1.2;
  margin: var(--space-4) 0;
  color: var(--text-primary);
}

.post-header__meta {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-4);
  margin: var(--space-6) 0;
  padding: var(--space-4) 0;
  border-top: 1px solid var(--border-color);
  border-bottom: 1px solid var(--border-color);
}

.post-header__meta-item {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  color: var(--text-secondary);
  font-size: var(--text-sm);
}

.post-header__meta-item svg {
  width: 18px;
  height: 18px;
  color: var(--text-muted);
}

.post-header__image {
  margin: var(--space-8) 0;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-lg);
}

.post-header__image img {
  width: 100%;
  height: auto;
  display: block;
}

/* ==========================================
   POST CONTENT
   ========================================== */

.post-content {
  max-width: 900px;
  margin: 0 auto var(--space-12);
  padding: 0 var(--space-4);
  font-size: var(--text-lg);
  line-height: 1.8;
  color: var(--text-primary);
}

.post-content h2 {
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  margin: var(--space-10) 0 var(--space-4);
  color: var(--text-primary);
  line-height: 1.3;
}

.post-content h3 {
  font-size: var(--text-2xl);
  font-weight: var(--font-semibold);
  margin: var(--space-8) 0 var(--space-3);
  color: var(--text-primary);
  line-height: 1.4;
}

.post-content h4 {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  margin: var(--space-6) 0 var(--space-2);
  color: var(--text-primary);
}

.post-content p {
  margin: var(--space-6) 0;
}

.post-content a {
  color: var(--primary-600);
  text-decoration: underline;
  text-decoration-thickness: 1px;
  text-underline-offset: 2px;
  transition: color var(--transition-base);
}

.post-content a:hover {
  color: var(--primary-700);
}

.post-content img {
  max-width: 100%;
  height: auto;
  border-radius: var(--radius-md);
  margin: var(--space-8) 0;
  box-shadow: var(--shadow-md);
}

.post-content ul,
.post-content ol {
  margin: var(--space-6) 0;
  padding-left: var(--space-8);
}

.post-content li {
  margin: var(--space-3) 0;
  line-height: 1.7;
}

.post-content blockquote {
  border-left: 4px solid var(--primary-600);
  padding-left: var(--space-6);
  margin: var(--space-8) 0;
  font-style: italic;
  color: var(--text-secondary);
  font-size: var(--text-xl);
  line-height: 1.6;
}

.post-content code {
  background: var(--bg-tertiary);
  color: var(--primary-600);
  padding: 2px var(--space-2);
  border-radius: var(--radius-sm);
  font-family: 'Courier New', 'Consolas', monospace;
  font-size: 0.9em;
}

.post-content pre {
  background: var(--gray-900);
  color: var(--gray-100);
  padding: var(--space-6);
  border-radius: var(--radius-md);
  overflow-x: auto;
  margin: var(--space-8) 0;
  box-shadow: var(--shadow-md);
}

.post-content pre code {
  background: none;
  padding: 0;
  color: inherit;
  font-size: var(--text-sm);
}

.post-content table {
  width: 100%;
  border-collapse: collapse;
  margin: var(--space-8) 0;
  font-size: var(--text-base);
}

.post-content th,
.post-content td {
  padding: var(--space-3);
  border: 1px solid var(--border-color);
  text-align: left;
}

.post-content th {
  background: var(--bg-secondary);
  font-weight: var(--font-semibold);
}

.post-content hr {
  border: none;
  border-top: 2px solid var(--border-color);
  margin: var(--space-12) 0;
}

/* ==========================================
   POST FOOTER
   ========================================== */

.post-footer {
  max-width: 900px;
  margin: 0 auto;
  padding: 0 var(--space-4);
}

.post-footer__tags {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: var(--space-3);
  margin: var(--space-8) 0;
  padding: var(--space-6) 0;
  border-top: 1px solid var(--border-color);
}

.post-footer__tags-label {
  font-weight: var(--font-semibold);
  color: var(--text-secondary);
}

.post-footer__share {
  margin: var(--space-8) 0;
  padding: var(--space-8);
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  text-align: center;
}

.post-footer__share-title {
  margin: 0 0 var(--space-4) 0;
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--text-primary);
}

/* ==========================================
   RELATED POSTS SECTION
   ========================================== */

.related-posts {
  max-width: 1200px;
  margin: var(--space-16) auto var(--space-8);
  padding: 0 var(--space-4);
}

.related-posts__title {
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  margin-bottom: var(--space-8);
  text-align: center;
  color: var(--text-primary);
}

.related-posts__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-6);
}

.related-post-card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  border: 1px solid var(--border-color);
  transition: all var(--transition-base);
}

.related-post-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-600);
}

.related-post-card__image {
  position: relative;
  padding-top: 56.25%;
  overflow: hidden;
  background: var(--bg-tertiary);
}

.related-post-card__image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--transition-slow);
}

.related-post-card:hover .related-post-card__image img {
  transform: scale(1.05);
}

.related-post-card__content {
  padding: var(--space-5);
}

.related-post-card__title {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  margin: 0 0 var(--space-3) 0;
  line-height: 1.4;
}

.related-post-card__title a {
  color: var(--text-primary);
  text-decoration: none;
  transition: color var(--transition-base);
}

.related-post-card__title a:hover {
  color: var(--primary-600);
}

.related-post-card__excerpt {
  color: var(--text-secondary);
  font-size: var(--text-sm);
  line-height: 1.6;
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* ==========================================
   DARK MODE
   ========================================== */

@media (prefers-color-scheme: dark) {
  .post-header__category {
    background: var(--primary-500);
  }

  .post-header__category:hover {
    background: var(--primary-600);
  }

  .post-header__title {
    color: var(--dark-text-primary);
  }

  .post-header__meta {
    border-color: var(--dark-border-color);
  }

  .post-header__meta-item {
    color: var(--dark-text-secondary);
  }

  .post-header__meta-item svg {
    color: var(--dark-text-muted);
  }

  .post-content {
    color: var(--dark-text-primary);
  }

  .post-content h2,
  .post-content h3,
  .post-content h4 {
    color: var(--dark-text-primary);
  }

  .post-content a {
    color: var(--primary-400);
  }

  .post-content a:hover {
    color: var(--primary-300);
  }

  .post-content blockquote {
    border-color: var(--primary-500);
    color: var(--dark-text-secondary);
  }

  .post-content code {
    background: var(--dark-bg-tertiary);
    color: var(--primary-400);
  }

  .post-content th,
  .post-content td {
    border-color: var(--dark-border-color);
  }

  .post-content th {
    background: var(--dark-bg-secondary);
  }

  .post-content hr {
    border-color: var(--dark-border-color);
  }

  .post-footer__tags {
    border-color: var(--dark-border-color);
  }

  .post-footer__tags-label {
    color: var(--dark-text-secondary);
  }

  .post-footer__share {
    background: var(--dark-bg-secondary);
  }

  .post-footer__share-title {
    color: var(--dark-text-primary);
  }

  .related-posts__title {
    color: var(--dark-text-primary);
  }

  .related-post-card {
    background: var(--dark-bg-primary);
    border-color: var(--dark-border-color);
  }

  .related-post-card:hover {
    border-color: var(--primary-500);
  }

  .related-post-card__image {
    background: var(--dark-bg-tertiary);
  }

  .related-post-card__title a {
    color: var(--dark-text-primary);
  }

  .related-post-card__title a:hover {
    color: var(--primary-400);
  }

  .related-post-card__excerpt {
    color: var(--dark-text-secondary);
  }
}

[data-theme="dark"] .post-header__category {
  background: var(--primary-500);
}

[data-theme="dark"] .post-header__category:hover {
  background: var(--primary-600);
}

[data-theme="dark"] .post-header__title {
  color: var(--dark-text-primary);
}

[data-theme="dark"] .post-header__meta {
  border-color: var(--dark-border-color);
}

[data-theme="dark"] .post-header__meta-item {
  color: var(--dark-text-secondary);
}

[data-theme="dark"] .post-header__meta-item svg {
  color: var(--dark-text-muted);
}

[data-theme="dark"] .post-content {
  color: var(--dark-text-primary);
}

[data-theme="dark"] .post-content h2,
[data-theme="dark"] .post-content h3,
[data-theme="dark"] .post-content h4 {
  color: var(--dark-text-primary);
}

[data-theme="dark"] .post-content a {
  color: var(--primary-400);
}

[data-theme="dark"] .post-content a:hover {
  color: var(--primary-300);
}

[data-theme="dark"] .post-content blockquote {
  border-color: var(--primary-500);
  color: var(--dark-text-secondary);
}

[data-theme="dark"] .post-content code {
  background: var(--dark-bg-tertiary);
  color: var(--primary-400);
}

[data-theme="dark"] .post-content th,
[data-theme="dark"] .post-content td {
  border-color: var(--dark-border-color);
}

[data-theme="dark"] .post-content th {
  background: var(--dark-bg-secondary);
}

[data-theme="dark"] .post-content hr {
  border-color: var(--dark-border-color);
}

[data-theme="dark"] .post-footer__tags {
  border-color: var(--dark-border-color);
}

[data-theme="dark"] .post-footer__tags-label {
  color: var(--dark-text-secondary);
}

[data-theme="dark"] .post-footer__share {
  background: var(--dark-bg-secondary);
}

[data-theme="dark"] .post-footer__share-title {
  color: var(--dark-text-primary);
}

[data-theme="dark"] .related-posts__title {
  color: var(--dark-text-primary);
}

[data-theme="dark"] .related-post-card {
  background: var(--dark-bg-primary);
  border-color: var(--dark-border-color);
}

[data-theme="dark"] .related-post-card:hover {
  border-color: var(--primary-500);
}

[data-theme="dark"] .related-post-card__image {
  background: var(--dark-bg-tertiary);
}

[data-theme="dark"] .related-post-card__title a {
  color: var(--dark-text-primary);
}

[data-theme="dark"] .related-post-card__title a:hover {
  color: var(--primary-400);
}

[data-theme="dark"] .related-post-card__excerpt {
  color: var(--dark-text-secondary);
}

/* ==========================================
   RESPONSIVE
   ========================================== */

@media (max-width: 768px) {
  .post-header__title {
    font-size: var(--text-3xl);
  }

  .post-content {
    font-size: var(--text-base);
  }

  .post-content h2 {
    font-size: var(--text-2xl);
  }

  .post-content h3 {
    font-size: var(--text-xl);
  }

  .post-header__meta {
    flex-direction: column;
    gap: var(--space-3);
    align-items: flex-start;
  }

  .related-posts__grid {
    grid-template-columns: 1fr;
  }
}
