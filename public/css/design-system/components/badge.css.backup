/**
 * Badge Component - Design System
 * koncert24.hu Unified Design System
 * 
 * Usage:
 * - .badge              - Basic badge
 * - .badge-primary      - Primary color
 * - .badge-success      - Success/green
 * - .badge-warning      - Warning/yellow
 * - .badge-error       - Error/red
 * - .badge-info         - Info/blue
 * - .badge-sm, .badge-lg - Size variants
 * - .badge-pill         - Fully rounded
 * - .badge-dot          - Just a dot indicator
 */

/* ==========================================
   BASE BADGE
   ========================================== */

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-1);
  padding: var(--space-1) var(--space-2-5);
  font-size: var(--text-xs);
  font-weight: var(--font-weight-semibold);
  line-height: 1;
  border-radius: var(--badge-radius);
  white-space: nowrap;
  vertical-align: middle;
  transition: var(--transition-fast);
}

/* ==========================================
   BADGE SIZES
   ========================================== */

.badge-sm {
  padding: var(--space-0-5) var(--space-2);
  font-size: var(--text-xs); /* 12px - WCAG minimum */
}

.badge-lg {
  padding: var(--space-2) var(--space-3);
  font-size: var(--text-sm);
}

/* ==========================================
   BADGE VARIANTS
   ========================================== */

.badge-primary {
  background: var(--color-primary-100);
  color: var(--color-primary-700);
}

.badge-secondary {
  background: var(--color-gray-200);
  color: var(--color-gray-700);
}

.badge-success {
  background: var(--color-success-100);
  color: var(--color-success-700);
}

.badge-warning {
  background: var(--color-warning-100);
  color: var(--color-warning-700);
}

.badge-error {
  background: var(--color-error-100);
  color: var(--color-error-700);
}

.badge-info {
  background: var(--color-primary-100);
  color: var(--color-primary-700);
}

/* Solid variants */
.badge-primary-solid {
  background: var(--color-primary-600);
  color: white;
}

.badge-success-solid {
  background: var(--color-success-600);
  color: white;
}

.badge-warning-solid {
  background: var(--color-warning-600);
  color: var(--color-gray-900);
}

.badge-error-solid {
  background: var(--color-error-600);
  color: white;
}

/* Outline variants */
.badge-outline {
  background: transparent;
  border: var(--border-width) solid var(--color-primary-600);
  color: var(--color-primary-600);
}

.badge-outline-success {
  background: transparent;
  border: var(--border-width) solid var(--color-success-600);
  color: var(--color-success-600);
}

.badge-outline-warning {
  background: transparent;
  border: var(--border-width) solid var(--color-warning-600);
  color: var(--color-warning-600);
}

.badge-outline-error {
  background: transparent;
  border: var(--border-width) solid var(--color-error-600);
  color: var(--color-error-600);
}

/* ==========================================
   BADGE SHAPES
   ========================================== */

.badge-pill {
  border-radius: var(--radius-full);
}

.badge-square {
  border-radius: var(--radius-sm);
}

/* ==========================================
   BADGE DOT (Status Indicator)
   ========================================== */

.badge-dot {
  padding: 0;
  width: var(--space-2);
  height: var(--space-2);
  border-radius: 50%;
}

.badge-dot-primary {
  background: var(--color-primary-600);
}

.badge-dot-success {
  background: var(--color-success-600);
}

.badge-dot-warning {
  background: var(--color-warning-600);
}

.badge-dot-error {
  background: var(--color-error-600);
}

/* Badge with dot indicator */
.badge-with-dot {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
}

.badge-with-dot::before {
  content: "";
  width: var(--space-1-5);
  height: var(--space-1-5);
  border-radius: 50%;
  background: currentColor;
}

/* ==========================================
   BADGE GROUPS
   ========================================== */

.badge-group {
  display: inline-flex;
  gap: var(--space-2);
  flex-wrap: wrap;
}

/* ==========================================
   BADGE POSITIONING (on elements)
   ========================================== */

.badge-wrapper {
  position: relative;
  display: inline-block;
}

.badge-positioned {
  position: absolute;
  top: calc(-1 * var(--space-2));
  right: calc(-1 * var(--space-2));
  min-width: var(--icon-sm);
  height: var(--icon-sm);
  padding: 0 var(--space-1-5);
  border-radius: var(--radius-full);
  font-size: var(--text-xs); /* 12px - WCAG minimum */
  background: var(--color-error-600);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ==========================================
   RESPONSIVE
   ========================================== */

@media (max-width: 640px) {
  .badge {
    font-size: var(--text-xs); /* 12px - WCAG minimum */
  }
  
  .badge-lg {
    font-size: var(--text-sm);
  }
}

/* ==========================================
   DARK MODE
   ========================================== */

[data-theme="dark"] .badge-primary {
  background: var(--color-primary-900);
  color: var(--color-primary-200);
}

[data-theme="dark"] .badge-secondary {
  background: var(--color-gray-700);
  color: var(--color-gray-200);
}

[data-theme="dark"] .badge-success {
  background: var(--color-success-900);
  color: var(--color-success-200);
}

[data-theme="dark"] .badge-warning {
  background: var(--color-warning-900);
  color: var(--color-warning-200);
}

[data-theme="dark"] .badge-error {
  background: var(--color-error-900);
  color: var(--color-error-200);
}

[data-theme="dark"] .badge-info {
  background: var(--color-primary-900);
  color: var(--color-primary-200);
}
