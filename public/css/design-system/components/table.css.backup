/**
 * TABLE COMPONENT
 * 
 * Unified table system for both admin and public interfaces
 * Uses design tokens from tokens.css
 * 
 * Features:
 * - Base table styles with clean borders
 * - Striped rows for better readability
 * - Hover states for interactive tables
 * - Bordered variant for grid layout
 * - Compact/default/large sizes
 * - Responsive horizontal scroll
 * - Sortable column headers
 * - Loading state
 * - Empty state
 * - Status indicators (badges in cells)
 * - Action buttons in cells
 * - Pagination support
 */

/* ============================================================================
   BASE TABLE
   ============================================================================ */

.table {
  width: 100%;
  border-collapse: collapse;
  background-color: var(--bg-surface);
  color: var(--text-primary);
  font-size: var(--text-sm);
  line-height: 1.5;
}

.table thead {
  background-color: var(--bg-subtle);
  border-bottom: var(--border-width-thick) solid var(--border-strong);
}

.table th {
  padding: var(--space-3) var(--space-4);
  text-align: left;
  font-weight: var(--font-weight-semibold);
  color: var(--text-secondary);
  text-transform: uppercase;
  font-size: var(--text-xs);
  letter-spacing: 0.05em;
}

.table td {
  padding: var(--space-3) var(--space-4);
  border-bottom: var(--border-width) solid var(--border-base);
  vertical-align: middle;
}

.table tbody tr:last-child td {
  border-bottom: none;
}

/* ============================================================================
   TABLE VARIANTS
   ============================================================================ */

/* Striped Rows */
.table-striped tbody tr:nth-child(even) {
  background-color: var(--bg-subtle);
}

/* Hover Effect */
.table-hover tbody tr {
  transition: background-color var(--transition-fast) var(--ease-out);
}

.table-hover tbody tr:hover {
  background-color: var(--bg-surface-hover);
  cursor: pointer;
}

/* Bordered Table */
.table-bordered {
  border: var(--border-width) solid var(--border-base);
}

.table-bordered th,
.table-bordered td {
  border: var(--border-width) solid var(--border-base);
}

/* Compact Size */
.table-compact th,
.table-compact td {
  padding: var(--space-2) var(--space-3);
}

/* Large Size */
.table-large th,
.table-large td {
  padding: var(--space-4) var(--space-6);
  font-size: var(--text-base);
}

/* ============================================================================
   SORTABLE HEADERS
   ============================================================================ */

.table-sortable th {
  cursor: pointer;
  user-select: none;
  position: relative;
  padding-right: var(--space-8);
}

.table-sortable th:hover {
  background-color: var(--color-gray-100);
}

.table-sortable th::after {
  content: '⇅';
  position: absolute;
  right: var(--space-3);
  opacity: 0.3;
  font-size: var(--text-sm);
}

.table-sortable th.sort-asc::after {
  content: '↑';
  opacity: 1;
  color: var(--color-primary-600);
}

.table-sortable th.sort-desc::after {
  content: '↓';
  opacity: 1;
  color: var(--color-primary-600);
}

/* ============================================================================
   RESPONSIVE TABLE
   ============================================================================ */

.table-responsive {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  border-radius: var(--radius-lg);
  border: var(--border-width) solid var(--border-base);
}

.table-responsive .table {
  margin-bottom: 0;
  border: none;
}

/* Show scrollbar hint on desktop */
@media (min-width: 1024px) {
  .table-responsive::-webkit-scrollbar {
    height: var(--space-2);
  }

  .table-responsive::-webkit-scrollbar-track {
    background: var(--bg-subtle);
    border-radius: var(--radius-md);
  }

  .table-responsive::-webkit-scrollbar-thumb {
    background: var(--border-strong);
    border-radius: var(--radius-md);
  }

  .table-responsive::-webkit-scrollbar-thumb:hover {
    background: var(--text-tertiary);
  }
}

/* Mobile: Stack table cells */
@media (max-width: 640px) {
  .table-mobile-stack thead {
    display: none;
  }

  .table-mobile-stack tbody,
  .table-mobile-stack tr,
  .table-mobile-stack td {
    display: block;
    width: 100%;
  }

  .table-mobile-stack tr {
    margin-bottom: var(--space-4);
    border: var(--border-width) solid var(--color-gray-200);
    border-radius: var(--radius-md);
    padding: var(--space-3);
  }

  .table-mobile-stack td {
    text-align: right;
    padding: var(--space-2) 0;
    border: none;
    position: relative;
    padding-left: 50%;
  }

  .table-mobile-stack td::before {
    content: attr(data-label);
    position: absolute;
    left: 0;
    width: 45%;
    text-align: left;
    font-weight: var(--font-weight-semibold);
    color: var(--color-gray-700);
  }
}

/* ============================================================================
   TABLE STATES
   ============================================================================ */

/* Loading State */
.table-loading {
  position: relative;
  opacity: 0.6;
  pointer-events: none;
}

.table-loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: var(--icon-xl);
  height: var(--icon-xl);
  border: 3px solid var(--color-gray-200);
  border-top-color: var(--color-primary-600);
  border-radius: 50%;
  animation: spin var(--transition-base) linear infinite;
}

@keyframes spin {
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

/* Empty State */
.table-empty {
  padding: var(--space-12) var(--space-6);
  text-align: center;
  color: var(--color-gray-500);
  background-color: var(--color-gray-50);
  border-radius: var(--radius-lg);
}

.table-empty-icon {
  font-size: var(--text-5xl);
  margin-bottom: var(--space-4);
  opacity: 0.5;
}

.table-empty-message {
  font-size: var(--text-base);
  font-weight: var(--font-weight-medium);
  margin-bottom: var(--space-2);
}

.table-empty-description {
  font-size: var(--text-sm);
  color: var(--color-gray-400);
}

/* ============================================================================
   TABLE CELL CONTENT
   ============================================================================ */

/* Cell with Badge */
.table td .badge {
  display: inline-flex;
}

/* Cell with Action Buttons */
.table-actions {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  justify-content: flex-end;
}

.table-actions .btn {
  font-size: var(--text-xs);
  padding: var(--space-1) var(--space-2);
}

/* Cell with Avatar */
.table-avatar {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.table-avatar img {
  width: var(--icon-lg);
  height: var(--icon-lg);
  border-radius: 50%;
  object-fit: cover;
}

.table-avatar-placeholder {
  width: var(--icon-lg);
  height: var(--icon-lg);
  border-radius: 50%;
  background-color: var(--color-gray-200);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: var(--font-weight-semibold);
  color: var(--color-gray-600);
  font-size: var(--text-sm);
}

/* Cell with Status Indicator */
.table-status {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.table-status-dot {
  width: var(--space-2);
  height: var(--space-2);
  border-radius: 50%;
  flex-shrink: 0;
}

.table-status-dot.status-success {
  background-color: var(--color-success-500);
}

.table-status-dot.status-warning {
  background-color: var(--color-warning-500);
}

.table-status-dot.status-error {
  background-color: var(--color-error-500);
}

.table-status-dot.status-inactive {
  background-color: var(--color-gray-400);
}

/* Cell Text Alignment */
.table .text-center {
  text-align: center;
}

.table .text-right {
  text-align: right;
}

/* Cell with Checkbox */
.table-checkbox {
  width: var(--icon-xl);
  text-align: center;
}

.table-checkbox input[type="checkbox"] {
  cursor: pointer;
}

/* ============================================================================
   TABLE PAGINATION
   ============================================================================ */

.table-pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: var(--space-4);
  padding: var(--space-4);
  background-color: var(--text-inverse);
  border: var(--border-width) solid var(--color-gray-200);
  border-radius: var(--radius-lg);
}

.table-pagination-info {
  font-size: var(--text-sm);
  color: var(--color-gray-600);
}

.table-pagination-controls {
  display: flex;
  gap: var(--space-2);
}

.table-pagination-btn {
  padding: var(--space-2) var(--space-3);
  background-color: var(--text-inverse);
  border: var(--border-width) solid var(--color-gray-300);
  border-radius: var(--radius-md);
  color: var(--color-gray-700);
  font-size: var(--text-sm);
  cursor: pointer;
  transition: all var(--transition-fast) var(--ease-out);
}

.table-pagination-btn:hover:not(:disabled) {
  background-color: var(--color-gray-50);
  border-color: var(--color-gray-400);
}

.table-pagination-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.table-pagination-btn.active {
  background-color: var(--color-primary-600);
  border-color: var(--color-primary-600);
  color: var(--text-inverse);
}

/* ============================================================================
   TABLE FILTERS (often used with tables)
   ============================================================================ */

.table-filters {
  display: flex;
  gap: var(--space-3);
  margin-bottom: var(--space-4);
  flex-wrap: wrap;
  align-items: center;
}

.table-filter-search {
  flex: 1;
  min-width: var(--space-48);
}

.table-filter-select {
  min-width: calc(var(--space-48) - var(--space-12));
}

/* ============================================================================
   ADMIN DATA TABLE SPECIFIC
   ============================================================================ */

.admin-table {
  background-color: var(--text-inverse);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.admin-table .table {
  margin-bottom: 0;
}

.admin-table thead {
  background-color: var(--color-gray-900);
  border-bottom: none;
}

.admin-table th {
  color: var(--text-inverse);
  font-weight: var(--font-weight-medium);
}

.admin-table tbody tr {
  transition: background-color var(--transition-fast) var(--ease-out);
}

.admin-table tbody tr:hover {
  background-color: var(--color-gray-50);
}

/* ============================================================================
   DARK MODE SUPPORT
   ============================================================================ */

/* ============================================================================
   DARK MODE
   Note: Using semantic tokens (--bg-surface, --text-primary, etc.) which
   automatically adjust in dark mode. No manual overrides needed.
   ============================================================================ */

/* ============================================================================
   RESPONSIVE BREAKPOINTS
   ============================================================================ */

@media (max-width: 1024px) {
  .table th,
  .table td {
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-xs);
  }

  .table-large th,
  .table-large td {
    padding: var(--space-3) var(--space-4);
    font-size: var(--text-sm);
  }
}

@media (max-width: 768px) {
  .table-pagination {
    flex-direction: column;
    gap: var(--space-3);
  }

  .table-pagination-info {
    order: 2;
  }

  .table-pagination-controls {
    order: 1;
  }

  .table-filters {
    flex-direction: column;
  }

  .table-filter-search,
  .table-filter-select {
    width: 100%;
  }
}
