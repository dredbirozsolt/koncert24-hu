/**
 * Skeleton Loader Component
 * Loading placeholders for content
 */

/* ==========================================
   BASE SKELETON
   ========================================== */

.skeleton {
  position: relative;
  display: inline-block;
  background-color: var(--bg-subtle);
  border-radius: var(--radius-md);
  overflow: hidden;
  user-select: none;
}

/* Animated shimmer effect */
.skeleton::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  transform: translateX(-100%);
  background-image: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0,
    rgba(255, 255, 255, 0.2) 20%,
    rgba(255, 255, 255, 0.5) 60%,
    rgba(255, 255, 255, 0)
  );
  animation: skeleton-shimmer 2s infinite;
}

@keyframes skeleton-shimmer {
  100% {
    transform: translateX(100%);
  }
}

/* ==========================================
   SKELETON VARIANTS
   ========================================== */

/* Text Lines */
.skeleton-text {
  width: 100%;
  height: 1em;
  border-radius: var(--radius-sm);
}

.skeleton-text--short {
  width: 60%;
}

.skeleton-text--medium {
  width: 80%;
}

.skeleton-text--long {
  width: 100%;
}

/* Heading */
.skeleton-heading {
  width: 60%;
  height: 2em;
  margin-bottom: var(--space-2);
}

.skeleton-heading--h1 {
  height: 2.5em;
}

.skeleton-heading--h2 {
  height: 2em;
}

.skeleton-heading--h3 {
  height: 1.5em;
}

/* Paragraph (multiple lines) */
.skeleton-paragraph {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.skeleton-paragraph .skeleton-text:last-child {
  width: 80%;
}

/* Avatar */
.skeleton-avatar {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-full);
}

.skeleton-avatar--sm {
  width: 32px;
  height: 32px;
}

.skeleton-avatar--lg {
  width: 56px;
  height: 56px;
}

.skeleton-avatar--xl {
  width: 80px;
  height: 80px;
}

/* Image/Thumbnail */
.skeleton-image {
  width: 100%;
  padding-bottom: 56.25%; /* 16:9 aspect ratio */
  border-radius: var(--radius-lg);
}

.skeleton-image--square {
  padding-bottom: 100%;
}

.skeleton-image--4-3 {
  padding-bottom: 75%;
}

.skeleton-image--3-2 {
  padding-bottom: 66.66%;
}

.skeleton-image--portrait {
  padding-bottom: 133.33%; /* 3:4 */
}

/* Button */
.skeleton-button {
  width: 120px;
  height: var(--button-height-md);
  border-radius: var(--radius-button-default);
}

.skeleton-button--sm {
  height: var(--button-height-sm);
}

.skeleton-button--lg {
  height: var(--button-height-lg);
  width: 160px;
}

.skeleton-button--full {
  width: 100%;
}

/* Input */
.skeleton-input {
  width: 100%;
  height: var(--input-height);
  border-radius: var(--input-border-radius);
}

/* Card */
.skeleton-card {
  padding: var(--card-padding);
  background-color: var(--card-bg);
  border-radius: var(--card-radius);
  box-shadow: var(--card-shadow);
}

.skeleton-card__image {
  margin: calc(var(--card-padding) * -1);
  margin-bottom: var(--space-4);
  width: calc(100% + var(--card-padding) * 2);
}

.skeleton-card__header {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  margin-bottom: var(--space-4);
}

.skeleton-card__body {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.skeleton-card__footer {
  display: flex;
  gap: var(--space-2);
  margin-top: var(--space-4);
}

/* Table Row */
.skeleton-table-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
  gap: var(--space-4);
  padding: var(--space-3);
  border-bottom: 1px solid var(--border-base);
}

.skeleton-table-cell {
  height: 1.2em;
}

/* ==========================================
   PULSE VARIANT (no shimmer)
   ========================================== */

.skeleton--pulse {
  animation: skeleton-pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.skeleton--pulse::after {
  display: none;
}

@keyframes skeleton-pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* ==========================================
   WAVE VARIANT (slower shimmer)
   ========================================== */

.skeleton--wave::after {
  animation-duration: 3s;
}

/* ==========================================
   NO ANIMATION (reduce motion)
   ========================================== */

@media (prefers-reduced-motion: reduce) {
  .skeleton::after {
    animation: none;
  }

  .skeleton--pulse {
    opacity: 0.7;
    animation: none;
  }
}

/* ==========================================
   DARK MODE
   ========================================== */

@media (prefers-color-scheme: dark) {
  .skeleton {
    background-color: var(--bg-subtle);
  }

  .skeleton::after {
    background-image: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0,
      rgba(255, 255, 255, 0.05) 20%,
      rgba(255, 255, 255, 0.1) 60%,
      rgba(255, 255, 255, 0)
    );
  }
}

[data-theme="dark"] {
  .skeleton {
    background-color: var(--bg-subtle);
  }

  .skeleton::after {
    background-image: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0,
      rgba(255, 255, 255, 0.05) 20%,
      rgba(255, 255, 255, 0.1) 60%,
      rgba(255, 255, 255, 0)
    );
  }
}

/* ==========================================
   COMMON PATTERNS
   ========================================== */

/* User Profile Skeleton */
.skeleton-profile {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

.skeleton-profile__avatar {
  flex-shrink: 0;
}

.skeleton-profile__info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

/* List Item Skeleton */
.skeleton-list-item {
  display: flex;
  gap: var(--space-3);
  padding: var(--space-4);
  border-bottom: 1px solid var(--border-base);
}

.skeleton-list-item:last-child {
  border-bottom: none;
}

/* Grid Layout Skeleton */
.skeleton-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: var(--space-6);
}

@media (max-width: 768px) {
  .skeleton-grid {
    grid-template-columns: 1fr;
  }
}

/* Form Skeleton */
.skeleton-form {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.skeleton-form__group {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.skeleton-form__label {
  width: 120px;
  height: 1em;
}
