/**
 * Toast/Notification Component
 * Temporary messages and alerts
 */

/* ==========================================
   TOAST CONTAINER
   ========================================== */

.toast-container {
  position: fixed;
  z-index: var(--z-notification);
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  padding: var(--space-4);
  pointer-events: none;
  max-width: 420px;
  width: 100%;
}

/* Position Variants */
.toast-container--top-right {
  top: 0;
  right: 0;
}

.toast-container--top-left {
  top: 0;
  left: 0;
}

.toast-container--top-center {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.toast-container--bottom-right {
  bottom: 0;
  right: 0;
}

.toast-container--bottom-left {
  bottom: 0;
  left: 0;
}

.toast-container--bottom-center {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

/* ==========================================
   TOAST BASE
   ========================================== */

.toast {
  position: relative;
  display: flex;
  align-items: flex-start;
  gap: var(--space-3);
  padding: var(--space-4);
  background-color: var(--bg-surface);
  border: 1px solid var(--border-base);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  pointer-events: auto;
  min-height: 64px;
  width: 100%;
  animation: toast-slide-in var(--duration-300) var(--ease-out);
}

@keyframes toast-slide-in {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Slide in from left */
.toast-container--top-left .toast,
.toast-container--bottom-left .toast {
  animation: toast-slide-in-left var(--duration-300) var(--ease-out);
}

@keyframes toast-slide-in-left {
  from {
    transform: translateX(-100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Slide in from top */
.toast-container--top-center .toast {
  animation: toast-slide-in-top var(--duration-300) var(--ease-out);
}

@keyframes toast-slide-in-top {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Slide in from bottom */
.toast-container--bottom-center .toast {
  animation: toast-slide-in-bottom var(--duration-300) var(--ease-out);
}

@keyframes toast-slide-in-bottom {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Exit animation */
.toast--exiting {
  animation: toast-fade-out var(--duration-200) var(--ease-in) forwards;
}

@keyframes toast-fade-out {
  to {
    opacity: 0;
    transform: scale(0.95);
  }
}

/* ==========================================
   TOAST ICON
   ========================================== */

.toast__icon {
  flex-shrink: 0;
  width: var(--icon-base);
  height: var(--icon-base);
  margin-top: 2px;
}

/* ==========================================
   TOAST CONTENT
   ========================================== */

.toast__content {
  flex: 1;
  min-width: 0;
}

.toast__title {
  font-size: var(--text-sm);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin: 0 0 var(--space-1) 0;
  line-height: var(--leading-snug);
}

.toast__message {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  margin: 0;
  line-height: var(--leading-normal);
}

/* ==========================================
   TOAST CLOSE BUTTON
   ========================================== */

.toast__close {
  flex-shrink: 0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  padding: 0;
  margin: -4px -4px 0 0;
  background: transparent;
  border: none;
  border-radius: var(--radius-base);
  color: var(--text-tertiary);
  cursor: pointer;
  transition: var(--transition-colors);
}

.toast__close:hover {
  background-color: var(--bg-subtle);
  color: var(--text-primary);
}

.toast__close:focus {
  outline: 2px solid var(--color-focus);
  outline-offset: 2px;
}

.toast__close svg {
  width: 16px;
  height: 16px;
}

/* ==========================================
   TOAST VARIANTS
   ========================================== */

/* Success */
.toast--success {
  border-left: 4px solid var(--color-success-600);
}

.toast--success .toast__icon {
  color: var(--color-success-600);
}

/* Error */
.toast--error {
  border-left: 4px solid var(--color-error-600);
}

.toast--error .toast__icon {
  color: var(--color-error-600);
}

/* Warning */
.toast--warning {
  border-left: 4px solid var(--color-warning-600);
}

.toast--warning .toast__icon {
  color: var(--color-warning-600);
}

/* Info */
.toast--info {
  border-left: 4px solid var(--color-info-600);
}

.toast--info .toast__icon {
  color: var(--color-info-600);
}

/* ==========================================
   FILLED VARIANTS
   ========================================== */

.toast--success-filled {
  background-color: var(--color-success-600);
  border-color: var(--color-success-700);
  color: var(--color-white);
}

.toast--success-filled .toast__title,
.toast--success-filled .toast__message,
.toast--success-filled .toast__icon,
.toast--success-filled .toast__close {
  color: var(--color-white);
}

.toast--error-filled {
  background-color: var(--color-error-600);
  border-color: var(--color-error-700);
  color: var(--color-white);
}

.toast--error-filled .toast__title,
.toast--error-filled .toast__message,
.toast--error-filled .toast__icon,
.toast--error-filled .toast__close {
  color: var(--color-white);
}

.toast--warning-filled {
  background-color: var(--color-warning-600);
  border-color: var(--color-warning-700);
  color: var(--color-white);
}

.toast--warning-filled .toast__title,
.toast--warning-filled .toast__message,
.toast--warning-filled .toast__icon,
.toast--warning-filled .toast__close {
  color: var(--color-white);
}

.toast--info-filled {
  background-color: var(--color-info-600);
  border-color: var(--color-info-700);
  color: var(--color-white);
}

.toast--info-filled .toast__title,
.toast--info-filled .toast__message,
.toast--info-filled .toast__icon,
.toast--info-filled .toast__close {
  color: var(--color-white);
}

/* ==========================================
   TOAST WITH ACTIONS
   ========================================== */

.toast__actions {
  display: flex;
  gap: var(--space-2);
  margin-top: var(--space-3);
}

.toast__action {
  padding: var(--space-1-5) var(--space-3);
  font-size: var(--text-xs);
  font-weight: var(--font-weight-medium);
  border: 1px solid var(--border-base);
  border-radius: var(--radius-md);
  background-color: transparent;
  color: var(--color-primary-600);
  cursor: pointer;
  transition: var(--transition-colors);
}

.toast__action:hover {
  background-color: var(--bg-surface-hover);
}

.toast__action:focus {
  outline: 2px solid var(--color-focus);
  outline-offset: 2px;
}

/* ==========================================
   PROGRESS BAR
   ========================================== */

.toast__progress {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 3px;
  background-color: var(--bg-subtle);
  border-radius: 0 0 var(--radius-lg) var(--radius-lg);
  overflow: hidden;
}

.toast__progress-bar {
  height: 100%;
  background-color: currentColor;
  transform-origin: left;
  animation: toast-progress linear forwards;
}

@keyframes toast-progress {
  to {
    transform: scaleX(0);
  }
}

/* ==========================================
   MOBILE RESPONSIVE
   ========================================== */

@media (max-width: 640px) {
  .toast-container {
    max-width: 100%;
    padding: var(--space-3);
  }

  .toast {
    padding: var(--space-3);
    font-size: var(--text-sm);
  }

  .toast__icon {
    width: var(--icon-sm);
    height: var(--icon-sm);
  }
}

/* ==========================================
   DARK MODE
   ========================================== */

@media (prefers-color-scheme: dark) {
  .toast {
    background-color: var(--bg-surface);
    border-color: var(--border-base);
  }

  .toast__close:hover {
    background-color: var(--bg-subtle);
  }
}

[data-theme="dark"] {
  .toast {
    background-color: var(--bg-surface);
    border-color: var(--border-base);
  }

  .toast__close:hover {
    background-color: var(--bg-subtle);
  }
}

/* ==========================================
   ACCESSIBILITY
   ========================================== */

/* Reduce motion for users who prefer it */
@media (prefers-reduced-motion: reduce) {
  .toast {
    animation: none;
  }

  .toast--exiting {
    animation: none;
    opacity: 0;
  }
}

/* Ensure toasts are announced by screen readers */
/* Role should be set in JavaScript based on urgency:
   - role="alert" for critical/error messages
   - role="status" for informational messages */
