/**
 * Card Component - Design System
 * koncert24.hu Unified Design System
 * 
 * Usage:
 * Base Cards:
 * - .card              - Basic content card (public/admin)
 * - .card-hover        - With hover lift effect
 * - .card-bordered     - With border instead of shadow
 * 
 * Specialized Cards:
 * - .stat-card         - Statistics/metrics card (admin dashboards)
 * - .data-card         - Data display card (admin)
 * - .info-card         - Informational card
 * - .feature-card      - Feature showcase (public)
 * 
 * Card Variants:
 * - .card--primary, --success, --warning, --error, --info
 * - .card-flat         - No shadow
 * - .card-elevated     - Higher shadow
 * 
 * Card Sizes:
 * - .card-sm, .card-md (default), .card-lg
 */

/* ==========================================
   BASE CARD
   ========================================== */

.card {
  background: var(--card-bg);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  border: var(--border-width) solid var(--border-subtle);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: var(--transition-base);
}

/* Card with hover effect */
.card-hover:hover {
  transform: translateY(calc(-1 * var(--space-1)));
  box-shadow: var(--shadow-lg);
}

/* Card with border (no shadow) */
.card-bordered {
  box-shadow: none;
  border: var(--border-width) solid var(--border-base);
}

/* ==========================================
   CARD LAYOUTS
   ========================================== */

/* Card with image */
.card__image {
  width: 100%;
  height: 12.5rem; /* 200px */
  background-size: cover;
  background-position: center;
  position: relative;
  flex-shrink: 0;
}

.card__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card__image--placeholder {
  background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.card__placeholder-icon {
  font-size: var(--text-6xl);
  color: white;
  opacity: 0.8;
}

/* Card content area */
.card__content,
.card-body {
  padding: var(--space-6);
  flex: 1;
}

.card__header {
  padding: var(--space-6);
  border-bottom: var(--border-width) solid var(--border-subtle);
}

.card__footer {
  padding: var(--space-6);
  border-top: var(--border-width) solid var(--border-subtle);
  background: var(--bg-subtle);
}

/* Card title */
.card__title,
.card-title {
  margin: 0 0 var(--space-2) 0;
  font-size: var(--text-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
}

.card__subtitle,
.card-subtitle {
  margin: 0 0 var(--space-4) 0;
  font-size: var(--text-sm);
  color: var(--text-secondary);
}

.card__description,
.card-text {
  margin: 0;
  font-size: var(--text-base);
  color: var(--text-secondary);
  line-height: var(--leading-relaxed);
}

/* ==========================================
   CARD SIZES
   ========================================== */

.card-sm .card__content,
.card-sm .card-body {
  padding: var(--space-4);
}

.card-sm .card__title {
  font-size: var(--text-lg);
}

.card-lg .card__content,
.card-lg .card-body {
  padding: var(--space-8);
}

.card-lg .card__title {
  font-size: var(--text-2xl);
}

/* ==========================================
   CARD VARIANTS (Color Accents)
   ========================================== */

.card--primary,
.card-primary {
  border-left: var(--border-width-heavy) solid var(--color-primary-600);
}

.card--success,
.card-success {
  border-left: var(--border-width-heavy) solid var(--color-success-600);
}

.card--warning,
.card-warning {
  border-left: var(--border-width-heavy) solid var(--color-warning-600);
}

.card--error,
.card-error {
  border-left: var(--border-width-heavy) solid var(--color-error-600);
}

.card--info,
.card-info {
  border-left: var(--border-width-heavy) solid var(--color-primary-500);
}

.card--purple {
  border-left: var(--border-width-heavy) solid var(--color-primary-500);
}

.card--orange {
  border-left: var(--border-width-heavy) solid var(--color-warning-500);
}

/* ==========================================
   CARD ELEVATION VARIANTS
   ========================================== */

.card-flat {
  box-shadow: none;
  border: var(--border-width) solid var(--border-base);
}

.card-elevated {
  box-shadow: var(--shadow-lg);
}

.card-elevated:hover {
  box-shadow: var(--shadow-xl);
}

/* ==========================================
   STAT CARD (Admin Dashboard Metrics)
   ========================================== */

.stat-card {
  background: var(--bg-surface);
  padding: var(--space-6);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  border: var(--border-width) solid var(--border-base);
  border-left: var(--border-width-heavy) solid var(--color-primary-600);
  transition: var(--transition-base);
}

.stat-card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(calc(-1 * var(--space-0-5)));
}

.stat-card__label,
.stat-card h3 {
  font-size: var(--text-xs);
  color: var(--text-secondary);
  margin: 0 0 var(--space-2) 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: var(--font-weight-semibold);
}

.stat-card__value,
.stat-card .stat-value {
  font-size: var(--text-4xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin: 0;
  line-height: 1;
}

.stat-card__change {
  font-size: var(--text-sm);
  margin-top: var(--space-2);
  display: flex;
  align-items: center;
  gap: var(--space-1);
}

.stat-card__change--positive {
  color: var(--color-success-600);
}

.stat-card__change--negative {
  color: var(--color-error-600);
}

.stat-card__icon {
  font-size: var(--text-3xl);
  opacity: 0.2;
  position: absolute;
  right: var(--space-4);
  top: var(--space-4);
}

/* Stat Card Variants */
.stat-card--primary {
  border-left-color: var(--color-primary-600);
}

.stat-card--success {
  border-left-color: var(--color-success-600);
}

.stat-card--warning {
  border-left-color: var(--color-warning-600);
}

.stat-card--error {
  border-left-color: var(--color-error-600);
}

.stat-card--info {
  border-left-color: var(--color-primary-500);
}

.stat-card--muted {
  border-left-color: var(--color-border);
  opacity: 0.7;
}

/* ==========================================
   DATA CARD (Admin Content Display)
   ========================================== */

.data-card {
  background: var(--bg-surface);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  padding: var(--space-6);
  overflow: hidden;
  margin-bottom: var(--space-6);
  border: var(--border-width) solid var(--border-subtle);
}

.data-card__header,
.data-card h3 {
  margin: 0 0 var(--space-4) 0;
  font-size: var(--text-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.data-card__header i,
.data-card h3 i {
  color: var(--color-primary-600);
  font-size: var(--text-xl);
}

.data-card__content {
  color: var(--text-secondary);
  font-size: var(--text-base);
  line-height: var(--leading-relaxed);
}

/* Data card with accent border (for stats/metrics) */
.data-card--accent {
  border-left: 4px solid var(--border-base);
  padding-left: calc(var(--space-6) - 4px); /* Compensate for thicker border */
}

.data-card--accent.border-primary {
  border-left-color: var(--color-primary-600);
}

.data-card--accent.border-success {
  border-left-color: var(--color-success-600);
}

.data-card--accent.border-warning {
  border-left-color: var(--color-warning-600);
}

.data-card--accent.border-error {
  border-left-color: var(--color-error-600);
}

.data-card--accent.border-secondary {
  border-left-color: var(--color-gray-600);
}

/* ==========================================
   INFO CARD (Informational/Help Cards)
   ========================================== */

.info-card {
  background: var(--color-primary-50);
  border: var(--border-width) solid var(--color-primary-200);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  display: flex;
  gap: var(--space-3);
  align-items: flex-start;
}

.info-card__icon {
  flex-shrink: 0;
  width: var(--icon-base);
  height: var(--icon-base);
  color: var(--color-primary-600);
}

.info-card__content {
  flex: 1;
}

.info-card__title {
  font-size: var(--text-base);
  font-weight: var(--font-weight-semibold);
  color: var(--color-primary-900);
  margin: 0 0 var(--space-1) 0;
}

.info-card__text,
.info-content {
  font-size: var(--text-sm);
  color: var(--color-primary-700);
  margin: 0;
  line-height: var(--leading-relaxed);
}

.info-content p {
  margin: 0 0 var(--space-3) 0;
}

.info-content p:last-child {
  margin-bottom: 0;
}

/* Info Card Variants */
.info-card--success {
  background: var(--color-success-50);
  border-color: var(--color-success-200);
}

.info-card--success .info-card__icon,
.info-card--success .info-card__title {
  color: var(--color-success-700);
}

.info-card--success .info-card__text {
  color: var(--color-success-600);
}

.info-card--warning {
  background: var(--color-warning-50);
  border-color: var(--color-warning-200);
}

.info-card--warning .info-card__icon,
.info-card--warning .info-card__title {
  color: var(--color-warning-700);
}

.info-card--warning .info-card__text {
  color: var(--color-warning-600);
}

.info-card--error,
.info-card--error {
  background: var(--color-error-50);
  border-color: var(--color-error-200);
}

.info-card--error .info-card__icon,
.info-card--error .info-card__title,
.info-card--error .info-card__icon,
.info-card--error .info-card__title {
  color: var(--color-error-700);
}

.info-card--error .info-card__text,
.info-card--error .info-card__text {
  color: var(--color-error-600);
}

/* ==========================================
   FILTER CARD (Admin Filters)
   ========================================== */

.filter-card {
  background: var(--bg-surface);
  border-radius: var(--radius-xl);
  padding: var(--space-8);
  margin-bottom: var(--space-6);
  box-shadow: var(--shadow-sm);
  border: var(--border-width) solid var(--border-subtle);
}

/* ==========================================
   FEATURE CARD (Marketing/Public)
   ========================================== */

.feature-card {
  background: var(--bg-surface);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  box-shadow: var(--shadow-md);
  text-align: center;
  transition: var(--transition-base);
  border: var(--border-width) solid var(--border-subtle);
}

.feature-card:hover {
  transform: translateY(calc(-1 * var(--space-2)));
  box-shadow: var(--shadow-xl);
}

.feature-card__icon {
  width: var(--icon-3xl);
  height: var(--icon-3xl);
  margin: 0 auto var(--space-4);
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-600));
  border-radius: var(--radius-xl);
  font-size: var(--text-3xl);
  color: white;
}

.feature-card__title {
  font-size: var(--text-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin: 0 0 var(--space-3) 0;
}

.feature-card__description {
  font-size: var(--text-base);
  color: var(--text-secondary);
  line-height: var(--leading-relaxed);
  margin: 0;
}

/* ==========================================
   CARD GRID LAYOUTS
   ========================================== */

.card-grid {
  display: grid;
  gap: var(--space-6);
  grid-template-columns: repeat(auto-fill, minmax(var(--container-xs), 1fr));
}

.card-grid--2 {
  grid-template-columns: repeat(auto-fit, minmax(calc(var(--container-xs) - 100px), 1fr));
}

.card-grid--3 {
  grid-template-columns: repeat(auto-fit, minmax(var(--container-xs), 1fr));
}

.card-grid--4 {
  grid-template-columns: repeat(auto-fit, minmax(calc(var(--container-xs) - 150px), 1fr));
}

/* ==========================================
   RESPONSIVE
   ========================================== */

@media (max-width: 768px) {
  .card__content,
  .card-body {
    padding: var(--space-4);
  }
  
  .stat-card {
    padding: var(--space-4);
  }
  
  .stat-card__value,
  .stat-card .stat-value {
    font-size: var(--text-3xl);
  }
  
  .feature-card {
    padding: var(--space-6);
  }
  
  .card-grid,
  .card-grid--2,
  .card-grid--3,
  .card-grid--4 {
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }
}

@media (max-width: 640px) {
  .card__image {
    height: 10rem; /* 160px */
  }
}

/* ==========================================
   INFO GRID (For Info Sections in Data Cards)
   ========================================== */

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(var(--container-xs), 1fr));
  gap: var(--space-6);
  margin-top: var(--space-4);
}

.info-grid p {
  margin: 0 0 var(--space-2) 0;
  font-size: var(--text-base);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.info-grid ul {
  margin: 0;
  padding-left: var(--space-5);
  color: var(--text-secondary);
  font-size: var(--text-sm);
  line-height: var(--leading-relaxed);
}

.info-grid li {
  margin-bottom: var(--space-1);
}

@media (max-width: 768px) {
  .info-grid {
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }
}
