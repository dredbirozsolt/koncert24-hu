/**
 * CODE & PRE COMPONENT
 * Design System - Syntax highlighting and code blocks
 */

/* ============================================================================
   INLINE CODE
   ============================================================================ */

code {
  background: var(--bg-secondary);
  color: var(--color-primary-600);
  padding: var(--space-0-5) var(--space-1-5);
  border-radius: var(--radius-sm);
  font-family: 'Monaco', 'Menlo', 'Courier New', 'Consolas', monospace;
  font-size: 0.875em;
  font-weight: var(--font-weight-normal);
  white-space: nowrap;
}

/* Dark mode */
[data-theme="dark"] code {
  background: var(--color-gray-800);
  color: var(--color-primary-400);
}

/* ============================================================================
   CODE BLOCKS (PRE)
   ============================================================================ */

pre {
  background: var(--bg-secondary);
  border: var(--border-width) solid var(--border-base);
  border-radius: var(--radius-md);
  padding: var(--space-4);
  overflow-x: auto;
  margin: var(--space-4) 0;
  line-height: var(--leading-relaxed);
}

pre code {
  background: transparent;
  padding: 0;
  color: var(--text-primary);
  font-size: var(--font-sm);
  white-space: pre;
  border-radius: 0;
}

/* Dark mode */
[data-theme="dark"] pre {
  background: var(--color-gray-900);
  border-color: var(--color-gray-700);
}

/* ============================================================================
   SCROLLBAR STYLING FOR CODE BLOCKS
   ============================================================================ */

pre::-webkit-scrollbar {
  height: 8px;
}

pre::-webkit-scrollbar-track {
  background: var(--bg-subtle);
  border-radius: var(--radius-sm);
}

pre::-webkit-scrollbar-thumb {
  background: var(--color-gray-400);
  border-radius: var(--radius-sm);
}

pre::-webkit-scrollbar-thumb:hover {
  background: var(--color-gray-500);
}

/* Dark mode scrollbar */
[data-theme="dark"] pre::-webkit-scrollbar-thumb {
  background: var(--color-gray-600);
}

[data-theme="dark"] pre::-webkit-scrollbar-thumb:hover {
  background: var(--color-gray-500);
}

/* ============================================================================
   SYNTAX HIGHLIGHTING (Optional - for future use)
   ============================================================================ */

.code-keyword {
  color: var(--color-primary-600);
  font-weight: var(--font-weight-bold);
}

.code-string {
  color: var(--color-success-600);
}

.code-comment {
  color: var(--text-tertiary);
  font-style: italic;
}

.code-number {
  color: var(--color-warning-600);
}

.code-function {
  color: var(--color-info-600);
}
