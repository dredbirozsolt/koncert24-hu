/**
 * Breadcrumb Navigation Component
 * WCAG 2.1 AA compliant navigation pattern
 */

/* ==========================================
   BREADCRUMB CONTAINER
   ========================================== */

.breadcrumb {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-3) 0;
  margin: 0;
  list-style: none;
  font-size: var(--text-sm);
  color: var(--text-secondary);
}

/* ==========================================
   BREADCRUMB ITEMS
   ========================================== */

.breadcrumb-item {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  color: var(--text-secondary);
  text-decoration: none;
  transition: var(--transition-colors);
}

.breadcrumb-item:hover {
  color: var(--text-primary);
  text-decoration: underline;
}

.breadcrumb-item:focus {
  outline: 2px solid var(--color-focus);
  outline-offset: 2px;
  border-radius: var(--radius-sm);
}

/* Active/Current Item */
.breadcrumb-item[aria-current="page"],
.breadcrumb-item.active {
  color: var(--text-primary);
  font-weight: var(--font-weight-medium);
  pointer-events: none;
}

/* ==========================================
   SEPARATORS
   ========================================== */

.breadcrumb-item:not(:last-child)::after {
  content: '/';
  margin-left: var(--space-2);
  color: var(--text-tertiary);
  font-weight: var(--font-weight-normal);
}

/* Alternative separator styles */
.breadcrumb--arrow .breadcrumb-item:not(:last-child)::after {
  content: '›';
  font-size: var(--text-lg);
}

.breadcrumb--chevron .breadcrumb-item:not(:last-child)::after {
  content: '';
  width: 6px;
  height: 6px;
  border-right: 2px solid currentColor;
  border-top: 2px solid currentColor;
  transform: rotate(45deg);
  margin-top: -2px;
}

.breadcrumb--dot .breadcrumb-item:not(:last-child)::after {
  content: '•';
}

/* ==========================================
   SIZES
   ========================================== */

.breadcrumb--sm {
  font-size: var(--text-xs);
  gap: var(--space-1);
}

.breadcrumb--sm .breadcrumb-item:not(:last-child)::after {
  margin-left: var(--space-1);
}

.breadcrumb--lg {
  font-size: var(--text-base);
  gap: var(--space-3);
}

.breadcrumb--lg .breadcrumb-item:not(:last-child)::after {
  margin-left: var(--space-3);
}

/* ==========================================
   WITH ICONS
   ========================================== */

.breadcrumb-item svg,
.breadcrumb-item .icon {
  width: var(--icon-sm);
  height: var(--icon-sm);
  flex-shrink: 0;
}

/* Home icon as first item */
.breadcrumb-item:first-child svg {
  width: var(--icon-base);
  height: var(--icon-base);
}

/* ==========================================
   TRUNCATED BREADCRUMBS
   ========================================== */

.breadcrumb--truncate .breadcrumb-item {
  max-width: 200px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

@media (min-width: 768px) {
  .breadcrumb--truncate .breadcrumb-item {
    max-width: 300px;
  }
}

/* ==========================================
   COLLAPSED/MOBILE VIEW
   ========================================== */

@media (max-width: 640px) {
  .breadcrumb--responsive .breadcrumb-item:not(:last-child):not(:first-child) {
    display: none;
  }

  .breadcrumb--responsive .breadcrumb-item:nth-last-child(2)::after {
    content: '...';
  }
}

/* ==========================================
   DARK MODE
   ========================================== */

@media (prefers-color-scheme: dark) {
  .breadcrumb-item {
    color: var(--text-secondary);
  }

  .breadcrumb-item:hover {
    color: var(--text-primary);
  }

  .breadcrumb-item[aria-current="page"],
  .breadcrumb-item.active {
    color: var(--text-primary);
  }
}

[data-theme="dark"] {
  .breadcrumb-item {
    color: var(--text-secondary);
  }

  .breadcrumb-item:hover {
    color: var(--text-primary);
  }

  .breadcrumb-item[aria-current="page"],
  .breadcrumb-item.active {
    color: var(--text-primary);
  }
}

/* ==========================================
   ACCESSIBILITY
   ========================================== */

/* Ensure screen readers announce as navigation */
/* Aria-label should be set in HTML: <nav aria-label="Breadcrumb"> */

/* High contrast mode support */
@media (prefers-contrast: high) {
  .breadcrumb-item {
    text-decoration: underline;
  }

  .breadcrumb-item[aria-current="page"],
  .breadcrumb-item.active {
    text-decoration: none;
    font-weight: var(--font-weight-bold);
  }
}
