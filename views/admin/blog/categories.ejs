                    <% } %>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</div>

<!-- T√∂rl√©s meger≈ës√≠t≈ë form (not needed anymore) -->
<form id="deleteForm" method="POST" class="hidden">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
</form>

<script>
async function deleteCategory(id) {
  const confirmed = await Modal.confirm({
    title: 'Kateg√≥ria t√∂rl√©se',
    message: 'Biztosan t√∂r√∂lni szeretn√©d ezt a kateg√≥ri√°t?',
    confirmText: 'T√∂rl√©s',
    cancelText: 'M√©gse'
  });
  
  if (confirmed) {
    try {
      const response = await fetch(`/admin/blog/categories/${id}/delete`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= csrfToken %>'
        }
      });
      
      const data = await response.json();
      
      if (response.ok && data.success) {
        Modal.alert({
          title: 'Siker',
          message: data.message || 'Kateg√≥ria sikeresen t√∂r√∂lve!',
          type: 'success'
        });
        location.reload();
      } else {
        throw new Error(data.message || 'Hiba t√∂rt√©nt a t√∂rl√©s sor√°n');
      }
    } catch (error) {
      Modal.alert({
        title: 'Hiba',
        message: '‚ùå Hiba: ' + error.message,
        type: 'error'
      });
    }
  }
}
</script>



