                  <option value="media" <%= partner.category === 'media' ? 'selected' : '' %>>M√©dia</option>
                  <option value="zeneipar" <%= partner.category === 'zeneipar' ? 'selected' : '' %>>Zeneipar</option>
                  <option value="technologia" <%= partner.category === 'technologia' ? 'selected' : '' %>>Technol√≥gia</option>
                </select>
