                                    <h2 class="performer__name">
                                        <%= performer.name %>
                                    </h2>
                                    <p class="performer-category">
                                        <%= performer.getCategoryDisplayName() %>
                                    </p>
                                </div>
                    </div>
                </div>
            </div>

            <form class="booking-form" @submit.prevent="submitBooking">
                <!-- Date Selection -->
