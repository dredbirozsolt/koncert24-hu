          </div>
        </div>

        <!-- Filters Row -->
        <div class="filters__row">
          <!-- Category Filter -->
          <div class="performer__filter-group performer__filter-group--desktop">
            <div class="performer__filter-dropdown" x-data="{ open: false }">
