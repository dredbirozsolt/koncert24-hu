            <div style="height: 20px; width: var(--space-12); background: var(--color-primary-600);"></div>
          </div>
          <div style="display: flex; align-items: center; gap: var(--space-4);">
            <div style="width: 150px;">--space-16 (64px)</div>
            <div style="height: 20px; width: var(--space-16); background: var(--color-primary-600);"></div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
// Theme switcher
function setTheme(theme) {
  document.documentElement.setAttribute('data-theme', theme);
  localStorage.setItem('theme', theme);
}

// Initialize theme from localStorage
(function() {
  const savedTheme = localStorage.getItem('theme') || 'light';
  setTheme(savedTheme);
})();

// Toast notification system
function showToast(type) {
  const messages = {
    success: { title: 'Sikeres m≈±velet', message: 'Az adatok sikeresen ment√©sre ker√ºltek.' },
    error: { title: 'Hiba t√∂rt√©nt', message: 'K√©rj√ºk, pr√≥b√°lja √∫jra k√©s≈ëbb.' },
    warning: { title: 'Figyelmeztet√©s', message: 'Ez a m≈±velet visszavonhatatlan lehet.' },
    info: { title: 'Inform√°ci√≥', message: '√öj friss√≠t√©s √©rhet≈ë el a rendszerben.' }
  };
  
  const icons = {
    success: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>',
    error: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>',
    warning: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>',
    info: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>'
  };
  
  const container = document.getElementById('toast-container') || createToastContainer();
  const toast = document.createElement('div');
  toast.className = `toast toast--${type} toast--show`;
  toast.innerHTML = `
    <svg class="toast__icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      ${icons[type]}
    </svg>
    <div class="toast__content">
      <div class="toast__title">${messages[type].title}</div>
      <div class="toast__message">${messages[type].message}</div>
    </div>
    <button class="toast__close" aria-label="Bez√°r√°s">√ó</button>
  `;
  
  container.appendChild(toast);
  
  // Close button
  toast.querySelector('.toast__close').addEventListener('click', () => {
    toast.classList.remove('toast--show');
    setTimeout(() => toast.remove(), 300);
  });
  
  // Auto-remove after 5 seconds
  setTimeout(() => {
    toast.classList.remove('toast--show');
    setTimeout(() => toast.remove(), 300);
  }, 5000);
}

function createToastContainer() {
  const container = document.createElement('div');
  container.id = 'toast-container';
  container.style.cssText = 'position: fixed; top: 1rem; right: 1rem; z-index: 9999; display: flex; flex-direction: column; gap: 0.5rem;';
  document.body.appendChild(container);
  return container;
}

// Smooth scroll to anchors
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function (e) {
    e.preventDefault();
    const target = document.querySelector(this.getAttribute('href'));
    if (target) {
      target.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });
});
</script>
