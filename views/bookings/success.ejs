        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .success-icon {
        width: 80px;
        height: 80px;
        color: var(--color-success-600);
        margin: 0 auto var(--space-6);
    }

    .success-icon svg {
        width: 100%;
        height: 100%;
    }

    .success-title {
        font-size: var(--text-3xl);
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: var(--space-4);
    }

    @media (min-width: 768px) {
        .success-title {
