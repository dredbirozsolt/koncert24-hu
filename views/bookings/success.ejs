<!-- Success Page -->
<section class="section">
    <div class="container">
        <div class="success-container">
            <div class="success-icon">
                <svg viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd" />
                </svg>
            </div>

            <h1 class="success-title">Foglalási kérés elküldve!</h1>

            <p class="success-message">
                Köszönjük foglalási kérését! Hamarosan felvesszük Önnel a kapcsolatot a részletek egyeztetésére.
            </p>

            <div class="next-steps">
                <h2 class="steps-title">Mi történik ezután?</h2>
                <div class="steps-list">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h3>Visszajelzés</h3>
                            <p>24 órán belül felvesszük Önnel a kapcsolatot a megadott elérhetőségeken.</p>
                        </div>
                    </div>

                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h3>Részletek egyeztetése</h3>
                            <p>Megbeszéljük az esemény részleteit és elkészítjük az ajánlatunkat.</p>
                        </div>
                    </div>

                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h3>Szerződéskötés</h3>
                            <p>Az ajánlat elfogadása után szerződést kötünk és rögzítjük a foglalást.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="contact-info">
                <h3 class="contact-title">Sürgős esetben elérhet minket:</h3>
                <div class="contact-details">
                    <a href="tel:<%= companyPhone.replace(/\s/g, '') %>" class="contact-link">
                        <svg viewBox="0 0 20 20" fill="currentColor" class="contact-icon">
                            <path
                                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                        </svg>
                        <%= companyPhone %>
                    </a>

                    <a href="mailto:<%= companyEmail %>" class="contact-link">
                        <svg viewBox="0 0 20 20" fill="currentColor" class="contact-icon">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                        </svg>
                        <%= companyEmail %>
                    </a>
                </div>
            </div>

            <div class="success-actions">
                <a href="<%= basePath %>eloadok/<%= performer.slug %>" class="btn btn--outline btn-large">
                    Vissza az előadóhoz
                </a>
                <a href="<%= basePath %>" class="btn btn--primary btn-large">
                    Főoldal
                </a>
            </div>
        </div>
    </div>
</section>

<style>
