<!-- Related Posts -->
<% if (relatedPosts && relatedPosts.length > 0) { %>
  <section class="related-posts">
    <div class="container">
      <h2 class="h2 mb-6">Kapcsolódó cikkek</h2>
      
      <div class="card__grid card__grid--3">
        <% relatedPosts.forEach(related => { %>
          <article class="card card--hover">
            
            <!-- Card Image -->
            <% if (related.featuredImage) { %>
              <a href="<%= basePath %>blog/<%= related.slug %>" class="card__image">
                <img 
                  src="<%= related.featuredImage %>" 
                  alt="<%= related.featuredImageAlt || related.title %>"
                  loading="lazy"
                >
              </a>
            <% } %>

            <!-- Card Content -->
            <div class="card__body">
              
              <!-- Category Badge -->
              <% if (related.category) { %>
                <a href="<%= basePath %>blog/kategoria/<%= related.category.slug %>" class="badge badge--primary">
                  <%= related.category.name %>
                </a>
              <% } %>

              <!-- Title -->
              <h3 class="card__title">
                <a href="<%= basePath %>blog/<%= related.slug %>">
                  <%= related.title %>
                </a>
              </h3>

              <!-- Excerpt -->
              <% if (related.excerpt) { %>
                <p class="text-muted text-clamp text-clamp--3">
                  <%= related.excerpt %>
                </p>
              <% } %>

              <!-- Meta Info -->
              <div class="meta-list">
                <span class="meta-item">
                  <svg class="icon" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                  <%= related.author.name %>
                </span>
                <span class="meta-item">
                  <svg class="icon" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                  </svg>
                  <%= new Date(related.publishedAt).toLocaleDateString('hu-HU') %>
                </span>
                <% if (related.readingTime) { %>
                  <span class="meta-item">
                    <svg class="icon" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                    </svg>
                    <%= related.readingTime %> perc
                  </span>
                <% } %>
              </div>

              <!-- Tags -->
              <% if (related.tags && related.tags.length > 0) { %>
                <div class="tag-list">
                  <% related.tags.slice(0, 3).forEach(tag => { %>
                    <a href="<%= basePath %>blog/tag/<%= tag.slug %>" class="tag">
                      #<%= tag.name %>
                    </a>
                  <% }); %>
                </div>
              <% } %>
              
            </div>
          </article>
        <% }); %>
      </div>
    </div>
  </section>
<% } %>

