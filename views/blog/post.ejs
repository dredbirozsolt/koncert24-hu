<!-- Reading Progress Bar -->
<div class="progress-bar progress-bar--visible" id="readingProgressBar">
  <div class="progress-bar__fill" id="progressFill"></div>
</div>

<!-- Breadcrumbs -->
<nav aria-label="Breadcrumb" class="container pt-4">
  <ol class="breadcrumb">
    <li class="breadcrumb__item">
      <a href="<%= basePath %>"><svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/></svg>Főoldal</a>
    </li>
    <li class="breadcrumb__item">
      <a href="<%= basePath %>blog">Blog</a>
    </li>
    <% if (post.category) { %>
      <li class="breadcrumb__item">
        <a href="<%= basePath %>blog/kategoria/<%= post.category.slug %>">
          <%= post.category.name %>
        </a>
      </li>
    <% } %>
    <li class="breadcrumb__item" aria-current="page">
      <span><%= post.title %></span>
    </li>
  </ol>
</nav>

<!-- Blog Post Article -->
<article>
  <!-- Post Header -->
  <header class="post__header">
    <h1 class="post__header__title"><%= post.title %></h1>

    <div class="post__header__meta">
      <div class="post__header__meta-item">
        <svg viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
        </svg>
        <span><%= post.author.name %></span>
      </div>
      <div class="post__header__meta-item">
        <svg viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
        </svg>
        <time datetime="<%= post.publishedAt %>">
          <%= new Date(post.publishedAt).toLocaleDateString('hu-HU', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          }) %>
        </time>
      </div>
      <% if (post.readingTime) { %>
        <div class="post__header__meta-item">
          <svg viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
          </svg>
          <span><%= post.readingTime %> perc olvasás</span>
        </div>
      <% } %>
      <div class="post__header__meta-item">
        <svg viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
        </svg>
        <span><%= post.viewCount %> megtekintés</span>
      </div>
      <% if (post.category) { %>
        <div class="post__header__meta-item ml-auto">
          <a href="<%= basePath %>blog/kategoria/<%= post.category.slug %>" class="post__header__category--inline">
            <%= post.category.name %>
          </a>
        </div>
      <% } %>
    </div>

    <% if (post.featuredImage) { %>
      <div class="post__header__image">
        <img 
          src="<%= post.featuredImage %>" 
          alt="<%= post.featuredImageAlt || post.title %>"
          title="<%= post.title %>"
          width="1200"
          height="630"
          loading="eager"
        >
      </div>
    <% } %>
  </header>

  <!-- Post Content -->
  <div class="post__content">
    <%- post.content %>
  </div>

  <!-- Post Footer -->
  <footer class="post__footer">
    <!-- Tags -->
    <% if (post.tags && post.tags.length > 0) { %>
      <div class="post__footer__tags">
        <span class="post__footer__tags-label">Címkék:</span>
        <div class="tag-list">
          <% post.tags.forEach(tag => { %>
            <a href="<%= basePath %>blog/tag/<%= tag.slug %>" class="tag">
              #<%= tag.name %>
            </a>
          <% }); %>
        </div>
      </div>
    <% } %>

