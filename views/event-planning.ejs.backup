<!-- ============================================
     STYLE SHOWCASE INTERACTION SCRIPT
     ============================================ -->
<script>
    /**
     * Initialize Style Showcase
     * Adds parallax effects and interaction tracking
     */
    function initStyleShowcase() {
        const styleCards = document.querySelectorAll('.style-card');
        
        if (!styleCards.length) {
            console.warn('Style showcase cards not found');
            return;
        }

        // Parallax effect on mousemove
        styleCards.forEach(card => {
            card.addEventListener('mousemove', function(e) {
                const rect = this.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                
                const deltaX = (x - centerX) / centerX;
                const deltaY = (y - centerY) / centerY;
                
                const rotateX = deltaY * 8;
                const rotateY = deltaX * -8;
                
                this.style.transform = `translateY(-12px) scale(1.02) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
                
                const bg = this.querySelector('.style-card__background');
                if (bg) {
                    bg.style.transform = `scale(1.1) translate(${deltaX * 10}px, ${deltaY * 10}px)`;
                }
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = '';
                const bg = this.querySelector('.style-card__background');
                if (bg) {
                    bg.style.transform = '';
                }
            });

            // Keyboard support
            card.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    const slug = this.dataset.slug;
                    const styleName = this.dataset.style;
                    
                    console.log('style_selected', { slug, styleName, interaction: 'keyboard' });
                    
                    // Track analytics if available
                    if (window.analytics && typeof window.analytics.track === 'function') {
                        window.analytics.track('style_selected', {
                            slug: slug,
                            styleName: styleName,
                            source: 'event_planning_showcase',
                            interaction: 'keyboard'
                        });
                    }
                    
                    window.location.href = this.href;
                }
            });

            // Click tracking
            card.addEventListener('click', function(e) {
                const slug = this.dataset.slug;
                const styleName = this.dataset.style;
                
                console.log('style_selected', { slug, styleName, interaction: 'click' });
                
                // Track analytics if available
                if (window.analytics && typeof window.analytics.track === 'function') {
                    window.analytics.track('style_selected', {
                        slug: slug,
                        styleName: styleName,
                        source: 'event_planning_showcase',
                        interaction: 'click'
                    });
                }
            });
        });

        console.log('‚ú® Style showcase initialized:', styleCards.length, 'cards with parallax effects');
    }

    // Initialize on DOM ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initStyleShowcase);
    } else {
        initStyleShowcase();
    }
</script>


